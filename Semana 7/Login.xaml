<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana_7.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="LOGIN" FontSize="24" HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="txtUsuario" Placeholder="USUARIO"/>
            <Entry x:Name="txtContraseña" Placeholder="CONTRASEÑA"/>
            <Button x:Name="btnIniciar" Text="INICIAR SESION" Clicked="btnIniciar_Clicked"/>
            <Button x:Name="btnRegistrar" Text="REGISTRAR" Clicked="btnRegistrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>